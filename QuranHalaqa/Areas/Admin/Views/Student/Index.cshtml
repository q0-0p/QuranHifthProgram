@{
    ViewData["Title"] = "Student";
}

<!-- <a asp-area="Admin" asp-controller="Location" asp-action="Edit" asp-route-id="1">TEST</a> -->

<div class="row row-eq-height">
    <!--   <div class="col-md-12 row-eq-height"> -->
    <!--   Parking Table goes here.<br />
       Notez: 1.Add Starting(?) Date
       2.Add Parking History table.-->
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Student List</h3>
        </div>
        <p>TODO: Add Student Search</p>
        <p>TODO: Add Paging</p>
        <!-- /.box-header -->
        <div class="box-body">
            <button id="student-add" class="addStudent btn btn-primary">Add Student</button>
            <table class="table table-responsive table-striped table-hover">
                <thead>
                    <tr>
                        <th>Student Name </th>
                        <th>Halaqa</th>
                        <th>Student Status</th>
                    </tr>
                </thead>
                <tbody id="student-table-body"></tbody>
            </table>
        </div>
        <!-- /.box-body -->
    </div>

</div>

<div class="modal fade" id="StudentModal" tabindex="-1" role="dialog" aria-labelledby="StudentModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="StudentModalTitle">StudentModalTitle</h4>
            </div>
            <div class="modal-body">
                <!-- Nav tabs -->
                <div>

                    <form>
                        <div class="form-group">
                            <label for="sheikh-first-name" class="control-label">Student First Name:</label>
                            <input type="text" class="form-control" id="student-first-name" />
                        </div>
                        <div class="form-group">
                            <label for="sheikh-last-name" class="control-label">Last Name:</label>
                            <input type="text" class="form-control" id="student-last-name" />
                        </div>
                        <div class="form-group">
                            <label for="sheikh-id" class="control-label">Parent Name:</label>
                            <input type="text" class="form-control" id="student-parent-name" />
                        </div>
                        <div class="form-group">
                            <label for="sheikh-id" class="control-label">Contact #:</label>
                            <input type="text" class="form-control" id="student-contactno" />
                        </div>
                        <div class="form-group">
                            <label for="sheikh-id" class="control-label">Email:</label>
                            <input type="text" class="form-control" id="student-email" />
                        </div>
                        <div class="form-group">
                            <label for="sheikh-id" class="control-label">Address:</label>
                            <input type="text" class="form-control" id="student-address" />
                        </div>
                        <div class="form-group">
                            <label for="sheikh-id" class="control-label">Student Status:</label>
                            <select class="form-control" id="student-status">
                                <option value="Active">Active</option>
                                <option value="Inactive">Inactive</option>
                                <option value="WaitingList">WaitingList</option>
                                <option value="Expelled">Expelled</option>
                            </select>
                        </div>
                        <div class="form-group" id="student-expel-reason-form">
                            <label for="sheikh-id" class="control-label">Expelling Reason:</label>
                            <input type="text" class="form-control" id="student-expel-reason" />
                        </div>
                        <div class="form-group" id="halaqa-form">
                            <label for="sheikh-id" class="control-label">Halaqa:</label>
                            <select class="form-control" id="halaqa-id"></select>
                        </div>

                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="student-save" class="btn btn-primary">Save</button>
                <button type="button" id="student-delete" class="btn btn-danger">Delete</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
</div>

@section scripts {
    <script src="~/js/app-admin-student.js" type="text/javascript"></script>
}
